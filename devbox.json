{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "go@1.22",
    "templ@latest",
    "commitizen@latest",
    "goreleaser@latest",
    "go-task@latest",
    "bun@latest",
    "ipfs-cluster@latest"
  ],
  "env": {
    "GOPATH": "$HOME/go",
    "PATH": "$HOME/go/bin:$PATH",
    "CHAIN_ID": "sonr-testnet-1",
    "DENOM": "usnr",
    "KEYRING": "test",
    "MONIKER": "florence",
    "MIN_GAS_PRICES": "0.0001usnr"
  },
  "shell": {
    "scripts": {
      "init": [
        "make install",
        "sh ./scripts/test_node.sh"
      ],
      "gen": [
        "make proto-gen",
        "make templ",
        "make dwn"
      ],
      "build": [
        "make build",
        "make local-image"
      ],
      "testnet": [
        "make install",
        "devbox services up"
      ],
      "pkl-eval": [
        "bunx pkl eval ./pkl/msgs.pkl"
      ]
    }
  }
}
